<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Domain</th>
      <th>Display name</th>
      <th>Note</th>
      <th>Uri</th>
      <th>Url</th>
      <th>Last webfingered at</th>
      <th>Inbox url</th>
      <th>Outbox url</th>
      <th>Shared inbox url</th>
      <th>Followers url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.username %></td>
        <td><%= account.domain %></td>
        <td><%= account.display_name %></td>
        <td><%= account.note %></td>
        <td><%= account.uri %></td>
        <td><%= account.url %></td>
        <td><%= account.last_webfingered_at %></td>
        <td><%= account.inbox_url %></td>
        <td><%= account.outbox_url %></td>
        <td><%= account.shared_inbox_url %></td>
        <td><%= account.followers_url %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

